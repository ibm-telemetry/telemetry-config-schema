{
  "name": "@ibm/telemetry-config-schema",
  "description": "Config file schema and associated utilities for IBM Telemetry",
  "version": "0.1.1",
  "license": "Apache-2.0",
  "author": "IBM",
  "keywords": [
    "ibm",
    "telemetry",
    "schema",
    "yaml",
    "opentelemetry"
  ],
  "publishConfig": {
    "access": "public"
  },
  "homepage": "https://github.com/ibm-telemetry/telemetry-config-schema#readme",
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/ibm-telemetry/telemetry-config-schema.git"
  },
  "bugs": {
    "url": "https://github.com/ibm-telemetry/telemetry-config-schema/issues"
  },
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/main/schema.d.ts",
      "default": "./dist/main/schema.js"
    },
    "./schema.json": "./dist/telemetry-config.schema.json"
  },
  "files": [
    "dist/"
  ],
  "scripts": {
    "build": "tsc",
    "build:schema": "ts-json-schema-generator --path ./src/main/schema.ts --type Schema > dist/telemetry-config.schema.json",
    "clean": "rimraf dist",
    "lint": "scripts/lint",
    "lint:fix": "scripts/lint_and_fix",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@commitlint/cli": "^18.0.0",
    "@commitlint/config-conventional": "^18.0.0",
    "@types/node": "^20.8.8",
    "@typescript-eslint/eslint-plugin": "^6.9.0",
    "eslint": "^8.52.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-config-standard-with-typescript": "^39.1.1",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-jsdoc": "^46.8.2",
    "eslint-plugin-n": "^16.2.0",
    "eslint-plugin-notice": "^0.9.10",
    "eslint-plugin-promise": "^6.1.1",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.0.2",
    "prettier": "^3.0.3",
    "rimraf": "^5.0.5",
    "ts-json-schema-generator": "^1.4.0",
    "typescript": "^5.2.2"
  }
}
